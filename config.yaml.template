mixed-port: ${MIXED_PORT}
allow-lan: true
bind-address: "*"
mode: rule
log-level: info
external-controller: 0.0.0.0:${API_PORT}
external-ui: /root/.config/mihomo/ui
secret: ${SECRET}

proxy-providers:
  app:
    type: http
    url: "${SUBSCRIPTION_URL}"
    interval: ${SUBSCRIPTION_UPDATE_INTERVAL}
    path: ./providers/subscription.yaml
    # 添加重试限制
    max-failed: 2
    # 失败后的重试间隔（秒）
    failed-interval: 600
